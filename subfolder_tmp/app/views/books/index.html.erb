<body>

  <p id="notice"></p>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <!--ここから下が可変にするよてい-->
    <tbody>
      <% @books.each do |book| %>
      <tr>  <!--仮1枠目-->
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", "/books/#{book.id}" %></td>
        <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
        <td><%= link_to "Destory", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New Book</h2>

  <%= form_with model:@book, local:true do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book' %>

  <% end %>

 <p>
   <a href="/books/new">投稿</a>
 </p>

</body>