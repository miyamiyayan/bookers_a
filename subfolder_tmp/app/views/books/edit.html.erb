<body>
  <h1>Editing Book</h1>
    <%= form_with model:@book, local:true do |f| %>

  <div class="field">
    <label>Title</label>
    <%= f.text_field:title %>
  </div>

  <div class="field">
    <label>Body</label>
    <%= f.text_area:body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>

  <% end %>

 <div>
    <%= link_to "Show", book_path(@book) %> | <a href="/books">Back</a>
  </div>

</body>